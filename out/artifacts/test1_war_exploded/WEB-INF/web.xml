<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>start</servlet-name>
        <servlet-class>servlets.StartServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>start</servlet-name>
        <url-pattern>/startServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>getQuestion</servlet-name>
        <servlet-class>servlets.GetQuestionServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>getQuestion</servlet-name>
        <url-pattern>/getQuestionServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>getSetOfAnswers</servlet-name>
        <servlet-class>servlets.GetSetOfAnswersServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>getSetOfAnswers</servlet-name>
        <url-pattern>/getSetOfAnswersServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>addAnswer</servlet-name>
        <servlet-class>servlets.AddAnswerServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>addAnswer</servlet-name>
        <url-pattern>/addAnswerServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>finish</servlet-name>
        <servlet-class>servlets.FinishServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>finish</servlet-name>
        <url-pattern>/result</url-pattern>
    </servlet-mapping>
</web-app>